<div class="container p-4">
    <div class="row">
        {{!-- <div class="col-md-4 mx-auto"> --}}
        <div class="card mx-auto col-md-6">
            <div class="card-body">
                <form action="/links/edit/{{ record.id }}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{ record.title }}" class="form-control" name="title"
                            placeholder="Title" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="url" value="{{ record.url }}" class="form-control" name="url" placeholder="Url">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="2"
                            placeholder="Description">{{ record.description }}</textarea>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input disabled class="form-check-input" type="checkbox" value="checkedValue">
                            Private
                            (soon)</label>
                    </div>
                    <div class="card-footer mt-3">
                        <button type="submit" class="btn btn-success btn-block">Save</button>
                        <a href="/links" class="btn btn-secondary btn-block">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
        {{!-- </div> --}}
    </div>
</div>